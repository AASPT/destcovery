@model SeminarInvitesMVC.GuestResponse
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Thanks</title>
</head>
<body style="background-color:cadetblue;text-align:center">
    <h1>Thank You,@Model.Name!</h1>
    <div class="lead" style="font-family:'Times New Roman';font-size:larger;top:20px;"> 
        @if(Model.willAttend==true)
        {
            @:Its great that you're coming for seminar.Your seat is reserved.
        }
        else
        {
            @:Sorry to hear that you can't make it,but thanks for letting us know.
        }

    </div>
</body>
</html>
