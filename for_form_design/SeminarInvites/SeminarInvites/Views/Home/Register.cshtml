@model SeminarInvites.GuestResponse
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
   
    <link href="~/Content/style.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <div class="abc" >
        <div class="panel panel-success" style="width:40%;">
            <div class="panel-heading text-center"><h1>Register</h1></div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary()

                    <div class="form-group">
                        <label>Your Name:</label> @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Your Email:</label>@Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Your Phone:</label>@Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Will You attend?</label>@Html.DropDownListFor(x => x.WillAttend, new[] {
               new SelectListItem(){Text="yes, i'll be there",Value = bool.TrueString},
               new SelectListItem(){Text="No, can't come",Value = bool.FalseString}
                }, "choose an option", new { @class = "form-control" })
                    </div>

                    <div class="text-center">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                }


                @*Submit form button using JS*@
                <button onclick="submitForm()"> Submit Form</button>
                <script>
                    function submitForm()
                    {
                        if (confirm("are you sure to submit this form"))
                        {
                            var frm = document.getElementsByTagName("form");
                            frm[0].submit();
                        }
                    }
                </script>
            </div>
        </div>
    </div>

</body>
</html>
