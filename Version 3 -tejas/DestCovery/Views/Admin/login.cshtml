@model DestCovery.Models.Admin_Info
@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}

<!-- Admin Login -->

<div class="wrap">
    <img src="~/images/web/logotran.png" alt="Destcovery-logo" style="width:320px; height:200px;align-content:center" />
    <h2>ADMIN LOGIN</h2>
    <h5 style="color:red;align-content:center"> @ViewBag.LOGINMSG </h5>
    <br />

    @using (Html.BeginForm("login", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label>Email Id :</label>@Html.TextBoxFor(x => x.Admin_Email, new { @class = "logintexbox", @required = "true", @autocomplete = "off" })
        </div>

        <div class="form-group">
            <label>Password :</label>@Html.PasswordFor(x => x.Admin_Password, new { @class = "logintexbox", @required = "true", @autocomplete = "off" })
        </div>

        <div class="text-center">
            <input type="submit" value="Submit" class="loginsubmit" />
        </div>
    }

    <h4 style="text-align:center;"> NewUser: <a href="User_Registraion_Form" style="color:white;"> SignUp </a></h4>
</div>


