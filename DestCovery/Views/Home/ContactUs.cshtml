@model DestCovery.Models.ContactUs

@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br />
<section id="#Contact">
    <div class="jumbotron">
        <div class="mbr-overlay" style="opacity: 0.9; background-color:skyblue">
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="title col-12 col-lg-8">
                    <h3 class="mbr-section-title align-center pb-3 mbr-fonts-style display-4" style="text-align: center;"><strong>Contact Us</strong></h3>
                </div>
            </div><br>
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="media-container-column col-lg-8" data-form-type="formoid">
                    <div data-form-alert="" hidden="">
                        Thanks for filling out the form!
                    </div>
                    <h3 class="text-center"> @ViewBag.DISPLAYMSG </h3>

                    @using (Html.BeginForm("ContactUs", "Home", FormMethod.Post))
                    {
                        <div class="row row-sm-offset">
                            <div class="col-md-4 multi-horizontal" data-for="name">
                                <div class="form-group">
                                    <label class="form-control-label mbr-fonts-style display-7" for="name-form1-2w">Name</label>
                                    @Html.TextBoxFor(x => x.person_name, new { @class = "form-control", @required = "true", @autocomplete = "off", @placeholder = "Enter Name" })
                                </div>
                            </div>
                            <div class="col-md-4 multi-horizontal" data-for="email">
                                <div class="form-group">
                                    <label class="form-control-label mbr-fonts-style display-7" for="email-form1-2w">Email</label>
                                    @Html.TextBoxFor(x => x.person_email, new { @class = "form-control", @required = "true", @autocomplete = "off", @placeholder = "Enter Email" })
                                </div>
                            </div>
                            <div class="col-md-4 multi-horizontal" data-for="phone">
                                <div class="form-group">
                                    <label class="form-control-label mbr-fonts-style display-7" for="phone-form1-2w">Phone</label>
                                    @Html.TextBoxFor(x => x.person_mobile, new { @class = "form-control", @required = "true", @autocomplete = "off", @placeholder = "Enter Phone" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group" data-for="message">
                            <label class="form-control-label mbr-fonts-style display-7" for="message-form1-2w">Message</label>
                            @Html.TextAreaFor(x => x.person_msg, new { @class = "form-control", @required = "true", @autocomplete = "off", @placeholder = "Enter Message" })
                        </div>

                        <span class="input-group-btn">
                            <button href="#" type="submit" class="btn btn-primary btn-form display-4">SEND FORM</button>
                        </span>

                    }
                </div>
            </div>
        </div>
        <br /><br /><br /><br /><br /><br />
    </div>
</section>

<!--  Footer View  -->
@{
    Html.RenderPartial("footer_view");
}






