
@model DestCovery.Models.Package_Spots

@{
    ViewBag.Title = "AddPackageSpot";
    Layout = "~/Views/Shared/_Layout_admin_dashboard.cshtml";
}

<div class="row">
    <div class="col-xs-10">
        <h2> @ViewBag.PACKAGENAME <small> (package)</small> </h2>
    </div>
    <div class="">
        <h2> </h2>
        <h2> <small> Add Package Spot </small> </h2>
    </div>
</div>
<br />
<h4> <b> Add Package Spot </b></h4>
<div class="row">
    @using (Html.BeginForm("AddPackageSpot", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="col-xs-6">
            <div class="form-group">
                <label for="exampleInputEmail1"> Package Id </label>
                

                @Html.TextBoxFor(x => x.Package_Id, new { @class = "form-control", @required = "true", @autocomplete = "off", @placeholder = "Enter Package Name", @Value=@ViewBag.PACKAGEID, @readonly="true" })
            </div>
        </div>
        <div class="col-xs-6">
            <div class="form-group">
                <label for="exampleInputEmail1"> Spot Name</label>
                @Html.TextBoxFor(x => x.Spot_Name, new { @class = "form-control", @required = "true", @autocomplete = "off", @placeholder = "Enter Package TagLine" })
            </div>
        </div>
        <div class="col-xs-12">
            <div class="form-group">
                <label for="exampleInputEmail1"> Spot Description</label>
                @Html.TextAreaFor(x => x.Spot_Description, new { @class = "form-control", @required = "true", @autocomplete = "off", @placeholder = "Enter Package Description" })
            </div>
        </div>

        <div class="col-xs-8">
        </div>

        <div class="col-xs-4">
            <div class="form-group">
                <label for="exampleInputEmail1"> Submit </label>
                <input type="submit" value="Submit" class="btn btn-primary btn-block btn-dark" />
            </div>
        </div>

    }
</div>

