@model DestCovery.Models.ViewModel

@{
    ViewBag.Title = "BookThisTour";
    Layout = "~/Views/Shared/_Layout_user_dashboard.cshtml";
}

<div class="row">
    <div class="col-xs-10">
        <h2> @ViewBag.PACKAGENAMET </h2>
    </div>
    <div class="col-xs-2">
        <h2></h2>
       <h3> <small> Package Booking </small></h3> 
    </div>
</div>

<br />
<h5 class="text-danger"> Note : Final Submit Will Confirm Your Booking </h5>
<div class="row">
    <table class="table table-striped table-bordered">
        <tr>
            <th> Package Id </th>
            <th> Package Name </th>
            <th> Package TagLine </th>
            <th> Package Price / Person </th>
            <th> Total Traveller </th>
        </tr>
        @foreach (var item in Model.package_master_vm.Take(1000).Reverse())
        {
            var Package__id = item.Package_Id;
            var Package__name = item.Package_Name;
            ViewBag.PACKAGEPRICET = item.Package_Price;

            <tr>
                <td>   @Html.DisplayFor(modelItem => item.Package_Id) </td>
                <td> @Html.DisplayFor(modelItem12 => item.Package_Name) </td>
                <td> @Html.DisplayFor(modelItem => item.Package_Tagline) </td>         
                <td> @Html.DisplayFor(modelItem => item.Package_Price) </td>
                <td> @Html.DisplayFor(modelItem => item.Package_Total_Travellers) </td>
            </tr>
        }
    </table>
</div>
<br />
<div class="row">
    <table class="table table-striped table-bordered">
        <tr>
            <th> Tour Id </th>
            <th> Tour Start Date</th>
            <th> Tour End Date</th>
            <th> Delete </th>
        </tr>
        @foreach (var item in Model.package_tour_vm.Take(100).Reverse())
        {
            <tr>
                <td> @item.Tour_Id </td>
                <td> @item.Tour_Start_Date </td>
                <td> @item.Tour_End_Date </td>
                <td class="text-center"> <a href="BookNow?packageid=@ViewBag.PACKAGEIDT&packagename=@ViewBag.PACKAGENAMET&tourid=@item.Tour_Id&price=@ViewBag.PACKAGEPRICET" class="btn btn-primary btn-sm"> Book This  </a></td>
            </tr>
        }
    </table>
</div>
    
