@model DestCovery.Models.ViewModel

@{
    ViewBag.Title = "user_reviews";
    Layout = "~/Views/Shared/_Layout_user_dashboard.cshtml";
}

<div class="row">
    <div class="col-xs-10">
        <h2> Reviews Submited </h2>
    </div>
    <div class="col-xs-2 text-center">
        <h2></h2>

    </div>
</div>
<br />
<div class="row">
    <table class="table table-striped table-bordered">
        <tr>
            <th> Package Name </th>
            <th> Comments </th>
            <th> Package Rating </th>

        </tr>

        @foreach (var items in Model.package_review_vm.Take(1000).Reverse())
        {
            foreach (var item in Model.package_master_vm.Where(x => x.Package_Id == items.Package_Id))
            {
        <tr>
            <td> @item.Package_Name </td>
            <td> @items.Package_Comment </td>
            <td>
                @for (int i = 1; i <= @items.Package_Rating; i++)
                {
                    <img src="~/images/web/star.png" width="2%" height="auto" />
                }
            </td>
        </tr>                
            }

        }
    </table>
</div>


