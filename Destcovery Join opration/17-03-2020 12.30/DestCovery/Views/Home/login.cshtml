@model DestCovery.Models.User_Info
@{
    ViewBag.Title = "DestCovery - Login";
    Layout = "~/Views/Shared/_Layout_login.cshtml";
}

<div class="wrap">
    <img src="~/images/web/logotran.png" alt="Destcovery-logo" style="width:320px; height:200px;align-content:center" />
    <h2>USER LOGIN</h2>
    <br />

    @using (Html.BeginForm("login", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <div class="form-group">
            <label>Email Id :</label>@Html.TextBoxFor(x => x.User_Email, new { @class = "logintexbox", @autocomplete = "off" })
        </div>

        <div class="form-group">
            <label>Password :</label>@Html.TextBoxFor(x => x.User_Password, new { @class = "logintexbox", @autocomplete = "off" })


        </div>

        <div class="text-center">
            <input type="submit" value="Submit" class="loginsubmit" />
        </div>
    }
</div>

