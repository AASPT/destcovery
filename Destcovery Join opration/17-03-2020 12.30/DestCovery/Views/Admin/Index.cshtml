@model IEnumerable<DestCovery.Models.ViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>
</head>
<body>
    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">Employee List</h4>
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Booking ID/th>
                    <th>User ID</th>
                    <th>Package Id</th>
                    <th>User Name</th>
                    <th>Package Name</th>
                    <th>Booking Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.booking.Booking_Id</td>
                        <td>@item.user.User_Id</td>
                        <td>@item.package_mster.Package_Id</td>
                        <td>@item.user.User_Name</td>
                        <td>@item.package_mster.Package_Name</td>
                        <td>@item.booking.Booking_Date</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

